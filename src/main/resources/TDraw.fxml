<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.canvas.Canvas?>

<Group xmlns:fx="http://javafx.com/fxml" fx:id="root" fx:controller="timingdiagram.FXMLController">
    <VBox fx:id="page">
        <MenuBar prefWidth="${page.width}">
            <menus>
                <Menu text="File">
                    <MenuItem fx:id="export_as_png" text="export as PNG"></MenuItem>
                </Menu>
            </menus>
        </MenuBar>
        <VBox fx:id="buttons" minWidth="100" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-spacing: 24">
            <Button text="add signal" onMouseClicked="#addSignal"></Button>
        </VBox>
        <fx:include fx:id="addRemove" source="AddRemoveController.fxml"></fx:include>
    </VBox>
</Group>
